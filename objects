#paddle 1
paddle1=turtle.Turtle()# capital turtle is object
paddle1.speed(0)#speed of animation ,not speed of turtle
paddle1.shape("square")
paddle1.color("white")
paddle1.shapesize(stretch_wid=5,stretch_len=1)#makes 5 times taller(stretch taller)
#makes 1 horizontally width
paddle1.penup()# Lifts the pen so the turtle doesn't draw when moving
paddle1.goto(-350,0)#left side of screen
#paddle 2
paddle2=turtle.Turtle()# capital turtle is object
paddle2.speed(0)#speed of animation ,not speed of turtle
paddle2.shape("square")
paddle2.color("white")
paddle2.shapesize(stretch_wid=5,stretch_len=1)
paddle2.penup()
paddle2.goto(350,0)
# ball
ball=turtle.Turtle()# capital turtle is object
ball.speed(0)#speed of animation ,not speed of turtle
ball.shape("square")
ball.color("white")
ball.penup()
ball.goto(0,0)
ball.dx=0.1
ball.dy=0.1
#pen
pen=turtle.Turtle()
pen.speed(0)
pen.color("white")
pen.penup()
pen.hideturtle()
pen.goto(0,260)
